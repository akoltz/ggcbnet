@using GGCharityData
@using GGCharityWebRole
@using GGCharityWebRole.ViewModels
@model EventViewModel


<h1><img src="@Model.Event.IconUrl" width="128" height="128" />@Model.Event.Name is Complete!</h1>
<span class="label"><a href="@Model.Event.Game.Website">@Model.Event.Game.Name</a></span>
<p class="lead">We've raised $@Model.LiveEventData.TotalPledgesRaised.ToString("F") by winning @Model.LiveEventData.TotalWinsAchieved games of @Model.Event.Game.Name!</p>
@Html.ActionLink("View your profile", "Index", "User") to complete your pledges
<p>
    @Html.Partial("EventDetailsButton", Model.Event)
</p>